{
  "name": "lighthouse-box",
  "version": "2.0.0",
  "description": "Show your website Lighthouse metrics in a pinned GitHub Gist",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "rimraf dist && ncc build src/index.ts -o dist --minify",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "lighthouse",
    "github-actions",
    "gist",
    "pinned-gist",
    "website-performance"
  ],
  "author": "Pavel Bychko <abordage.dev@gmail.com> (https://abordage.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abordage/lighthouse-box.git"
  },
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@octokit/rest": "^22.0.1",
    "chrome-launcher": "^1.1.2",
    "lighthouse": "^13.0.1",
    "lighthouse-pwa": "npm:lighthouse@10.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.0.0",
    "@vercel/ncc": "^0.38.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
}
